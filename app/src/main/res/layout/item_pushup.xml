<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/list_pushup_image"
            android:layout_width="@dimen/list_pushup_image_width"
            android:layout_height="@dimen/list_pushup_image_height"
            android:contentDescription="@string/display_image_of_pushup_position" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_pushup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Knee Pushup" />

        <TextView
            android:id="@+id/list_pushup_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Record : 250" />
    </LinearLayout>
</LinearLayout>